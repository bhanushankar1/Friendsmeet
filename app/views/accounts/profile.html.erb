<div class="container">
    <div class="row">
        <div class="col-4">
        <%= profile_picture @account, 200 %>
        </div>
        <div class="col-8 text-left">
            <div class="row">
                <div class="col-6">
                    <h1><%= @account.full_name %></h1>
                    <%= link_to "Edit Profile", edit_account_registration_path, class: "btn btn-secondary" if can_edit_profile?(@account.id) %>
                 </div>
            </div>
        <div class="row profile-stats">
            <div class="col-4">
               <%= @account.posts.count %> posts 
            </div>
            <div class="col-4">
            <%= link_to "#{@account.total_followers} -following", accounts_followers_path %>
            </div>
            <div class="col-4">
            <%= link_to "#{@account.total_following} -follower", accounts_followers_path %>
            </div>
            
        </div>

            <p><%= @account.full_name %></p>
            <p><%= simple_format @account.description %></p>
            <p><%= link_to @account.website if @account.website.present? %></p>
        </div>
    </div>



    <div class="row profile-posts">
            <% @posts.each do |post| %>
                <div class="col-4">
                    <div class="insta-post">
                        <%= link_to image_tag(post.image.url, class: "img1 img-fliud"),post_path(post) %>
                    </div>
                </div>
            <% end %>
    </div>
</div>

